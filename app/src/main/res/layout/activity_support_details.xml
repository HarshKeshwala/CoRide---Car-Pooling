<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportDetailsActivity"
    android:background="@color/colorText"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal|center_vertical"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDetails"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:elevation="5dp"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:divider="@color/colorDivider"
            android:showDividers="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/issueDetails"
                android:gravity="center_vertical|start"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/supportTitle"
                android:gravity="center_vertical|end"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/supportTitle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/supportTitle"
                android:gravity="center_vertical|start"
                android:layout_weight="9"
                android:paddingBottom="5dp"
                android:paddingTop="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="5dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:divider="@color/colorDivider"
            android:showDividers="end"
            android:background="@drawable/divider_table"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/supportMessage"
                android:gravity="center_vertical|end"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/supportMessage"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/supportMessage"
                android:gravity="center_vertical|start"
                android:layout_weight="9"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:maxLines="10"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:divider="@color/colorDivider"
            android:showDividers="end"
            android:background="@drawable/divider_table"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/response"
                android:gravity="center_vertical|end"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/supportResponse"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryText"
                android:text="@string/waiting"
                android:gravity="center_vertical|start"
                android:layout_weight="9"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:maxLines="10"
                />

        </TableRow>

    </TableLayout>

</ScrollView>