<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:divider="@color/colorDivider"
    android:dividerPadding="10dp"
    android:weightSum="10"
    >
    <TableLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:weightSum="10"
        android:layout_weight="1"

        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_horizontal|center_vertical"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sedan_car_list"
                />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:weightSum="10"
        android:layout_weight="8"
        android:layout_gravity="center_vertical"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="40dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical|left"
            android:weightSum="1"
            >
            <TextView
                android:id="@+id/cModelName"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:drawableLeft="@drawable/model_name"
                android:textSize="16dp"
                android:text="BMW i8"
                android:gravity="center_vertical|left"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryText"
                android:layout_span="2"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="22dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical|left"
            >
            <TextView
                android:id="@+id/cModelYear"
                android:layout_width="70dp"
                android:layout_height="22dp"
                android:drawableLeft="@drawable/calendar"
                android:textSize="12dp"
                android:gravity="center_vertical|left"
                android:drawablePadding="5dp"
                android:textColor="@color/colorSecondryText"
                android:paddingLeft="5dp"
                />

            <TextView
                android:id="@+id/cVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:drawableLeft="@drawable/license_number"
                android:textSize="12dp"
                android:gravity="center_vertical|left"
                android:drawablePadding="5dp"
                android:textColor="@color/colorSecondryText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/cId"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>